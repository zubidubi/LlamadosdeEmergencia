<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconoImageView"
        android:src="@mipmap/ic_launcher"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:adjustViewBounds="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/claveTextView"
        android:layout_alignTop="@+id/iconoImageView"
        android:layout_toRightOf="@+id/iconoImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toLeftOf="@+id/horaTextView"
        android:layout_toStartOf="@+id/horaTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/descripcionTextView"
        android:layout_below="@+id/claveTextView"
        android:layout_alignLeft="@+id/claveTextView"
        android:layout_alignStart="@+id/claveTextView"
        android:layout_alignRight="@+id/horaTextView"
        android:layout_alignEnd="@+id/horaTextView"
        android:height="60dp"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/horaTextView"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/claveTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/descripcionTextView"
        android:textSize="12dp" />

</RelativeLayout>
